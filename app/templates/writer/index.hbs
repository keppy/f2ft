{{#if errorMessage}}
  {{#md-card-panel class="white"
    bodyClass="red-text"}}
    {{errorMessage}}
  {{/md-card-panel}}
{{/if}}

{{#if successMessage}}
  {{#md-card-panel class="white"
    bodyClass="green-text"}}
    {{successMessage}}
  {{/md-card-panel}}
{{/if}}

{{#md-card title=articleTitle}}

  {{#md-card-content}}
    {{#th-writer}}
      {{medium-content-editable
        value=article.body
        options=options}}
    {{/th-writer}}
  {{/md-card-content}}
{{/md-card}}

<div class="row">
  <div class="col m8">
    {{md-btn icon='mdi-content-save'
      iconPositin='right'
      text=(t 'article.save')
      action='save'
      class='orange darken-4 font-white'}}

    {{md-btn icon='mdi-content-send'
      iconPositin='right'
      text=(t 'article.publish')
      action='publish'
      class='orange darken-4 font-white'}}
  </div>

  <div class="col m2 offset-m2">
    {{#md-fixed-btns
      class="" 
      btnIcon="mdi-content-add"
      btnClass="orange accent-2"}}    
      {{md-fixed-btn
        btnClass="orange accent-4"
        btnIcon='mdi-av-videocam'
        action='toggleVideoModal'}}
      {{md-fixed-btn
        btnClass="orange accent-3"
        btnIcon='mdi-image-photo-camera'
        action='toggleImageModal'}}
    {{/md-fixed-btns}}
  </div>
</div>

{{#if showModal}}
  {{#modal-dialog
    translucentOverlay=true
    alignment="center"
    close='toggleVideoModal'}}
    <div class="row">
      <div class="col m12">
        {{#md-card title=modalState.title
          class="add-dialog"}}
          {{md-input value=modalInputValue
            label=modalState.label}}
            <div class="row">
              <div class="col s4 offset-s4">
                {{md-btn
                  text=modalState.btnText
                  action=modalState.action}}
              </div>
            </div>
        {{/md-card}}
      </div>
    </div>
  {{/modal-dialog}}
{{/if}}

{{#if showImageModal}}
  {{#modal-dialog
    translucentOverlay=true
    alignment="center"
    close='toggleImageModal'}}
    <div class="row">
      <div class="col m12">
        {{#md-card title='Add Image'
          class="add-dialog"}}
          {{md-input value=imageHref
            label='Image URL'}}
            <div class="row">
              <div class="col s4 offset-s4">
                {{md-btn
                  text='add'
                  action='addImage'}}
              </div>
            </div>
        {{/md-card}}
      </div>
    </div>
  {{/modal-dialog}}
{{/if}}
